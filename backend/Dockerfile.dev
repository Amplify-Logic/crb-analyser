# Development Dockerfile with hot reload
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies (including WeasyPrint deps)
RUN apt-get update && apt-get install -y \
    libpq5 \
    curl \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libgdk-pixbuf2.0-0 \
    libffi-dev \
    shared-mime-info \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Don't copy source - it will be mounted as a volume for hot reload
# COPY src/ ./src/

# Expose port
EXPOSE 8383

# Run with reload enabled
CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8383", "--reload"]
